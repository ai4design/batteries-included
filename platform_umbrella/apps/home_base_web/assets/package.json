    "esbuild": "^0.20.0",
    "lodash": "4.17.21",
    "phoenix": "1.7.11",
    "phoenix_html": "3.3.3",
    "phoenix_live_view": "0.20.4",
    "topbar": "2.0.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.10",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "daisyui": "4.6.2",
    "postcss": "^8.4.34",
