<main role="main" class="container">
  <% if info = get_flash(@flash, :info) do %>
    <p class="alert alert-info" role="alert"><%= info %></p>
  <% end %>
  <%= if error = get_flash(@flash, :error) do %>
    <p class="alert alert-danger" role="alert"><%= error %></p>
  <% end %>

  <%= @inner_content %>
</main>
