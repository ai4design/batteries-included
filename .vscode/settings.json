{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.insertFinalNewline": true,
  "editor.tabSize": 2,
  "prettier.proseWrap": "always",
  "prettier.singleQuote": true,
  "prettier.prettierPath": "./dev/node_modules/prettier",
  "prettier.bracketSameLine": true,
  "elixirLS.projectDir": "./platform_umbrella",
  "elixirLS.enableTestLenses": true,
  "elixirLS.fetchDeps": true,
  "emmet.includeLanguages": {
    "phoenix-heex": "html",
    "html-eex": "html",
    "elixir": "html"
  },
  "tailwindCSS.includeLanguages": {
    "phoenix-heex": "html",
    "html-eex": "html",
    "elixir": "html"
  },
  "[ts]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[js]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[elixir]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[html-eex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80
  },
  "[mdx]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/deps": true
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/_build/**": true,
    "**/deps/**": true
  },
  "githubIssues.ignoreCompletionTrigger": [
    "coffeescript",
    "diff",
    "dockerfile",
    "dockercompose",
    "ignore",
    "ini",
    "julia",
    "makefile",
    "perl",
    "powershell",
    "python",
    "r",
    "ruby",
    "shellscript",
    "yaml",
    "elixir"
  ],
  "githubIssues.ignoreUserCompletionTrigger": ["python", "elixir"],
  "nixEnvSelector.nixFile": "${workspaceRoot}/shell.nix"
}
